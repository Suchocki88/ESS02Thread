        function showStandards() {
            const select = document.getElementById('state-select');
            const display = document.getElementById('standards-display');
            const selectedState = select.value;
            
            if (!selectedState) {
                display.innerHTML = '<div class="placeholder">Select a state from the dropdown above to view aligned standards for the Threads of Time activity.</div>';
                return;
            }
            
            const data = standardsData[selectedState];
            let html = `<h3>${data.title}</h3>`;
            
            data.standards.forEach(standard => {
                html += `
                    <div class="standard-item">
                        <div class="standard-code">${standard.code}</div>
                        <div class="standard-text">${standard.text}</div>
                        <div class="activity-connection"><strong>Activity Connection:</strong> ${standard.connection}</div>
                    </div>
                `;
            });
            
            display.innerHTML = html;
        }
    </script>
